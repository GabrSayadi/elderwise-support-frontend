.text {
  &-left {
    text-align: left !important;
  }

  &-center {
    text-align: center !important;
  }

  &-right {
    text-align: right !important;
  }

  &-success {
    color: #12b887;
  }

  &-warning {
    color: #FF7100;
  }

  &-error {
    color: #eb4d5c;
  }

  &-ltr {
    direction: ltr /* rtl:ignore */;
    text-align: right /* rtl:ignore */;
    unicode-bidi: inherit /* rtl: bidi-override */;
  }
}


